#########################################################################
# 3. CFLAGS
#########################################################################

CFLAGS := -O2 -DDMACAHB_DEBUG -DCONFIG_SINGLE_MODE_TEST=1 -Wno-int-to-pointer-cast

#########################################################################
# 5. define build target
#########################################################################

TARGET := fpsoc_dmacahb_single_mode

ifneq ($(PINMUX_MODE),)
CFLAGS += -DENABLE_$(PINMUX_MODE)=1
TARGET:=$(TARGET)_$(CHIP)_$(PINMUX_MODE)
endif

all: $(TARGET)
	@$(ECHO) COMPILE_PREFIX = $(COMPILE_PREFIX)

# include rules.mk
include $(SDK_ROOT)/tools/make/rules.mk